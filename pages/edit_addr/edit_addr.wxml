<view class="container edit_wrap">
  <form bindsubmit="submitForm" id="123">
    <view class="form_group">
      <text>姓名：</text>
      <input type="text" placeholder="请输入姓名"   bindinput="nameInput"/>
    </view> <!--LeeCH ^_^-->
    <view class="form_group">
      <text>电话：</text>
      <input type="number"  placeholder="请输入预约电话"    bindinput="phoneInput"/>
    </view>
    <view class="form_group">
      <text>地址：</text>
      <input type="text" placeholder="请输入预约地址"    bindinput="addrInput"/>
    </view><!--LeeCH ^_^-->
    <button class="save_btn" bindtap='Submit' formType="submit">保存</button>
    <toast hidden="{{saveToastHidden}}" bindchange="hideToast">
      保存成功
    </toast>
  </form>
</view>